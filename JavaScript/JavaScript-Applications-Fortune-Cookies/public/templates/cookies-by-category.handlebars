<button id="btn-sort-by-likes" class="btn btn-default">Sort by likes</button>
<button id="btn-sort-by-sharedate" class="btn btn-default">Sort by share date</button>
{{#each this}}
    <div class="category-item">
        <h3><a href="#/home?category={{category}}">{{category}}</a></h3>
        {{#each items}}
            <div class="cookie-item form-group" id="{{id}}">
                <frameset>
                    <legend><a href="#/home?category={{category}}">{{category}}</a></legend>
                    <h3>{{text}}</h3>
                    <div class="cookie-item-content-item likes">
                        <strong>Likes:</strong> {{likes}}
                    </div>
                    <div class="cookie-item-content-item dislikes">
                        <strong>Dislikes:</strong> {{dislikes}}
                    </div>
                    <div class="cookie-item-content-item">
                        <strong>Date:</strong> {{date}}
                    </div>
                    <br/>
                    <div class="cookie-item-content-item">
                        <img alt="{{text}}" src="{{img}}" class="cookie-img"/>
                    </div>
                    <br/>
                    <div class="cookie-item-content-item" class="form-control">
                        <label class="form-label">
                            <input type="radio" name="{{id}}" value="1" class="form-control">
                            Like
                        </label>
                        <label class="form-label">
                            <input type="radio" name="{{id}}" value="0" class="form-control">
                            Dislike
                        </label>
                    </div>
                    <br/>
                    <div class="cookie-item-content-item">
                        <button class="form-control btn btn-primary" name="{{id}}" id="btn-cookie-reshare">Re-Share</button>
                    </div>
                </frameset>
            </div>
        {{/each}}
    </div>
{{/each}}